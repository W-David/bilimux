{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/preload/**/*.d.ts",
    "src/shared/**/*",
    "uno.config.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "types": ["primevue"],
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@preload/*": [
        "src/preload/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    }
  }
}
